# library
library(ggplot2)
library(readxl)
library(tidyverse)
library(fishualize) 
library(colorblindr) 
library(rfishbase) 

# https://ggplot2.tidyverse.org/reference/scale_viridis.html

# data
MergedData_v1 <- read_excel("~/MergedData_v1.xlsx")

# fig 2
# outline of plot
# x axis - region and year
# y axis - number of DBT

# creating a pivot
fig2 = MergedData_v1 %>% 
  dplyr::select(Region, Year, 'Diamondback Terrapin',) %>%
  pivot_longer(cols = -c('Region', 'Year'), values_to = 'Values')
  
# stacked bar graph
figure2 <- ggplot(fig2, aes(y=Values, x=as.factor(Year), fill='Diamondback Terrapin')) + 
    geom_bar(position="stack", stat="identity") + 
    facet_wrap(~Region) +
    labs(y= "Number of Diamondback Terrapins Caught", x = "Region and Year") +
    scale_fill_fish_d(option = "Chlorurus_microrhinos", direction=-1) 
figure2
cvd_grid(figure2) #colorblind simualtor

#fig 3
# outline of plot
# x axis - region and year
# y axis - number of bycatch (by species)

# creating a pivot
fig3 = MergedData_v1 %>% 
  dplyr::select(Region, Year, 'Diamondback Terrapin', 'Oyster Toadfish', 'Horseshoe Crab', 'Spot', 'Atlantic Croaker', 'Summer Flounder', 'Spider Crab', 'American Eel') %>%
  pivot_longer(cols = -c('Region', 'Year'), names_to = 'Species', values_to = 'Values')

# stacked bar graph

figure3 <- ggplot(fig3, aes(fill=Species, y=Values, x=as.factor(Year))) + 
  geom_bar(position="stack", stat="identity") + 
  facet_wrap(~Region) +
  labs(y= "Number of Bycatch (by Species)", x = "Region and Year") +
  scale_fill_fish_d(option = "Pseudochromis_aldabraensis") 
figure3
cvd_grid(figure3) #colorblind simualtor
